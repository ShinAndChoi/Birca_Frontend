<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/rv_item_cafelist_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/photo"/>

    <TextView
        android:id="@+id/rv_item_cafelist_cafename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cafeName"
        android:textSize="30sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/rv_item_cafelist_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_item_cafelist_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toEndOf="@+id/rv_item_cafelist_image"
        app:layout_constraintTop_toBottomOf="@+id/rv_item_cafelist_cafename" />



</androidx.constraintlayout.widget.ConstraintLayout>