<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Onboarding.OnboardingCafeOwnerFragment">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/pretendardbold"
        android:text="카페 정보"
        android:textColor="#141516"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/name"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardbold"
            android:text="대표명"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/text_cafe_owner_name"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/border_onboarding_cafe_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardsemibold"
            android:hint="대표 이름을 입력하세요."
            android:textSize="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cafename"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardbold"
            android:text="카페 이름"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/text_cafe_owner_cafename"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="5dp"
            android:textColorHint="#FFFFFF"
            android:background="@drawable/border_onboarding_cafe_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardsemibold"
            android:hint="카페 이름을 입력하세요."
            android:textSize="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cafename">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardbold"
            android:text="연락처"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/text_phone_num1"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_onboarding_cafe_owner"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:fontFamily="@font/pretendardsemibold"
                android:hint="010"
                android:gravity="center"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/text_phone_num2"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_onboarding_cafe_owner"
                android:layout_width="111dp"
                android:layout_height="32dp"
                android:layout_marginLeft="11dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/text_phone_num3"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_onboarding_cafe_owner"
                android:layout_width="111dp"
                android:layout_height="32dp"
                android:layout_marginLeft="11dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:textSize="13sp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cetificate"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number">

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardbold"
            android:text="사업자등록증"
            android:textSize="13sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_onboarding_cafe_owner"
                android:fontFamily="@font/pretendardsemibold"
                android:hint="파일을 업로드하세요."
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_upload"
                android:layout_width="83dp"
                android:layout_height="32dp"
                android:background="@drawable/border_onboarding_cafe_owner"
                android:backgroundTint="#6C6C6C"
                android:text="업로드"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:fontFamily="@font/pretendardmedium"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#A1B4FF"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="제출하기"
            android:gravity="center"
            android:fontFamily="@font/pretendardbold"
            android:textSize="15sp"
            android:textColor="#FFFFFF"/>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>